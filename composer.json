{
    "name": "gpenverne/api-recipe",
    "description": "ApiRecipe",
    "homepage": "https://gpenverne.github.io/api-recipe/",
    "require": {
        "symfony/console": "*",
        "symfony/yaml": "*",
        "doctrine/inflector": "*",
        "monolog/monolog": "^1.22",
        "guzzlehttp/guzzle": "~6.0",
        "symfony/http-foundation": "^3.2",
        "symfony/routing": "^3.2",
        "j13k/yaml-lint": "^1.1",
        "graphaware/neo4j-php-client": "^4.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.0",
        "fabpot/php-cs-fixer": "^2.0"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "gpenverne"
        }
    ],
    "autoload": {
        "psr-0": {
            "": "src"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "ApiRecipe\\Command\\CreateDirsCommand::createDirs",
            "ApiRecipe\\Command\\CreateConfigFileCommand::createConfigFile"
        ],
        "post-update-cmd": [
            "ApiRecipe\\Command\\CreateDirsCommand::createDirs",
            "ApiRecipe\\Command\\CreateConfigFileCommand::createConfigFile"
        ]
    }
}
